<!doctype html>
<html class="nojs">
  <head>{{> head }}</head>
  <body data-app="{{appUrl}}" data-appRoot="{{appRoot}}" {{#sources}}data-source-{{source}}="{{src}}"{{/sources}} class="{{bodyClass}}" data-script='{ "js" : [ "commons.js", "speakingurl.js", "items.js" ], "hbs" : [ { "template" : "items.hbs", "id" : "items" } ] }'>
    {{> header }}
    <main class="main container-fluid" role="main">
	  <header>
	   <h2 class="page-title">Series: {{{label}}}</h2>
        <div class="resultsnum">Showing <span class="start"></span> - <span class="docslength"></span> of <span class="numfound"></span> results</div>
        <select id="browse-select" data-active="Sorting by" data-inactive="Sort by">
          <option data-sort-dir="asc" data-label="Volume" value="iass_series_{{identifier}}" selected>Sort by Volume</option>
          <option data-sort-dir="asc" data-label="Title" value="iass_longlabel">Sort by Title</option>
          <option data-sort-dir="asc" data-label="Author" value="ss_sauthor">Sort by Author</option>
        </select>
	  </header>
  	  <div>
  	    {{#content}}
  	      {{#items}}
            <div class="widget" data-name="items" data-sort="iass_series_{{identifier}}" data-order="desc" data-rows="{{rows}}" data-fl="{{fl}}" {{#fq}}data-fq-{{filter}}="{{value}}" {{/fq}}></div>
            <div class="text-center">
              <div id="paginator" class="pagination"></div>
            </div>
          {{/items}}
        {{/content}}        
	  </div>
    </main>
    {{> footer }}
    {{{ closure }}}
  </body>
</html>
